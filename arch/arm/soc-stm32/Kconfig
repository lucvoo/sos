config  SOC
        symbol
        default stm32

config	SOC_PARAMS
	bool
	default y
	select CORTEX_M4

config PHYS_ADDR
	hex
	default 0x20000000

config PHYS_SIZE
	hex
	default 0x00020000

config LOWPOWER_DEBUG
	bool "Allow debugging while in low-power mode"
	default y

# models
config	STM32F407
	bool
config	STM32F429
	bool

choice
	prompt "Clocks configuration"

config	STM32_CLK_12_168
	bool "12MHz -> 168MHz"

config	STM32_CLK_8_180
	bool "8MHz -> 180MHz"

endchoice
