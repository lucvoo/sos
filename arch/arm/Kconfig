config ARCH
	symbol
	default arm


config	ARM720T
	bool
	select ARMV4T

config	ARM7TDMI
	bool
	select ARMV4T

config	ARM926E
	bool
	select ARMV5

config	ARM926EJS
	bool
	select ARMV5
	select ARMV5TE

config	CORTEX_A7
	bool
	select ARMV7A
config	CORTEX_A8
	bool
	select ARMV7A
config	CORTEX_A9
	bool
	select ARMV7A
config	CORTEX_A15
	bool
	select ARMV7A

config	CORTEX_M4
	bool
	select ARMV7M

config	ARM_TZ
	bool
config	ARMV4T
	bool
config	ARMV5
	bool
config	ARMV5T
	bool
	select ARMV5
config	ARMV5TE
	bool
	select ARMV5T
config	ARMV6
	bool
config	ARMV6K
	bool
	select ARMV6
config	ARMV7A
	bool
	select ARM_TZ
config	ARMV7M
	select NOMMU
	select HAS_DIV32
	bool
config	ARMV7
	bool
	default ARMV7A || ARMV7M
config	ARMVA
	bool
	default !ARMV7M

config	ARM_ARCH
	int
	default 4 if ARMV4T
	default 5 if ARMV5
	default 6 if ARMV6
	default 7 if ARMV7A
	default 7 if ARMV7M

config	BITS
	int
	default 32

source arch/arm/Kconfig.mach
source arch/arm/Kconfig.socs


menu "ARM options"

comment "Memory"
config	VIRT_ADDR
	hex "Main RAM virtual address"
	default 0x80000000

config	TEXT_OFFSET
	hex "Start of kernel image relatively to the start of the RAM"
	default 0x00008000

config	XIP
	bool "XIP (kernel run from ROM or flash)"
config	XIP_PADDR
	hex "XIP physical address"
	depends on XIP
	default 0x80000000
config	XIP_VADDR
	hex "XIP virtual address" if !NOMMU
	depends on XIP
	default XIP_PADDR         if  NOMMU
	default VIRT_ADDR	  if !NOMMU
config	XIP_SIZE
	hex "XIP size"
	depends on XIP
	default 0x00100000

comment "Misc"
config	THUMB2
	bool "compile to thumb2" if !ARMV7M
	depends on ARMV7 || ARMV7M
	default ARMV7M

config	HAS_VBAR
	bool "Has VBAR"
	depends on ARMV6K || ARMV7
config	HIGH_VECTORS
	bool "Use high vectors"
	depends on !HAS_VBAR && !ARMV7M
	default y

config	NVIC_NBR_IRQ
	int "NVIC's IRQ number"
	depends on ARMV7M
	default 96

endmenu
