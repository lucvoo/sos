choice
	prompt "Platform"
	default	MACH_BEAGLEBONE

config MACH_GENERIC
	bool "generic"
config MACH_BEAGLEBONE
	bool "BeagleBone"

config MACH_STM32
	bool "STM32 family"

config MACH_UDOO_NEO
	bool "UDOO Neo"

endchoice

if MACH_BEAGLEBONE
source arch/arm/mach-beaglebone/Kconfig
endif
if MACH_STM32
source arch/arm/mach-stm32/Kconfig
endif
if MACH_UDOO_NEO
source arch/arm/mach-udoo-neo/Kconfig
endif
