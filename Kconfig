mainmenu "OS configuration"

choice
	prompt "Architecture"
	default	ARCH_ARM

config ARCH_ARM
	bool "ARM"

endchoice


if ARCH_ARM
source arch/arm/Kconfig
endif


menu "Build options"

config GC_SECTIONS
	bool "Sections GC"

config GC_SECTIONS_SHOW
	bool "Show sections GCed"
	depends on GC_SECTIONS

endmenu


config	NEED_INTERRUPT_STACK
	bool "is an interrupt stack needed?"
	default n

config	INTERRUPT_STACK_SIZE
	int "Interrupt stack size"
	depends on NEED_INTERRUPT_STACK
	default 4096

config	EXCEPTION_STACK_SIZE
	int "Exception stack size"
	default 4096

config	STARTUP_STACK_SIZE
	int "startup stack size"
	depends on !FIXED_STACKS
	default 4096

config	STACK_ALIGNMENT
	int "Stacks alignment"
	default 16

config	NR_THREAD_PRIORITY
	int "Number of threads priority levels"
	range 2 32
	default 32

config	FIXED_STACKS
	bool "Use the same size for all stacks"
	default y

config	FIXED_STACKS_SHIFT
	int "Size of the stacks, in power of 2"
	depends on FIXED_STACKS
	range 12 14
	default 14

config	KSOFTIRQ
	bool "Use a specific thread for delaying softirq"
	default n
	
config	DSR
	bool "Want DSR?"
	default n

config	REMOVE_INIT_SECTIONS
	bool "Remove init sections when not needed anymore"
	default y

config	HZ
	int "tick frequency"
	default 100
